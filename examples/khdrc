# sample config for khd

ctrl-f {
    khd mode activate BindingModeSwitcher
}

BindingModeSwitcher+ctrl-f {
    khd mode activate default
}

cmd-0x27 {
    echo "Bind through keycode" |\
    alerter -Title Keycode -timeout 3
}

cmd-h {
    kwmc window -f west
}

BindingModeSwitcher-h {
    kwmc window -f west
}

BindingModeSwitcher-l {
    kwmc window -f east
}

BindingModeSwitcher-j {
    kwmc window -f south
}

BindingModeSwitcher-k {
    kwmc window -f north
}
